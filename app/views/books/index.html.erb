<h1>Books</h1>
<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
  </tr>
 </thead>
 <% @books.each do |book| %>
  <tbody>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
  </tbody>
 <% end %>
</table>


<h2>New book</h2>
<%= form_with model: @book do |f| %>
<label for="title">Title</label>
 <div class="form">
  <%= f.text_field:title %>
 </div>
<label for="body">Body</label>
 <div class="form">
  <%= f.text_area:body %>
 </div>
 <div class="action">
  <%=f.submit "Create Book"%>
 </div>
<% end %>